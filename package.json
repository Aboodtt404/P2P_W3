{
  "name": "p2p-file-transfer-icp",
  "version": "0.1.0",
  "description": "Decentralized P2P file transfer using ICP and WebRTC",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "dfx build backend",
    "build:frontend": "mkdir -p src/frontend/dist && webpack && cp src/frontend/index.html src/frontend/dist/ && cp src/frontend/styles.css src/frontend/dist/",
    "deploy": "dfx deploy",
    "deploy:local": "dfx deploy --network local",
    "start": "dfx start --background && npm run deploy:local",
    "stop": "dfx stop"
  },
  "keywords": [
    "icp",
    "webrtc",
    "p2p",
    "file-transfer",
    "blockchain",
    "decentralized"
  ],
  "dependencies": {
    "@dfinity/agent": "^1.0.1",
    "@dfinity/candid": "^1.0.1",
    "@dfinity/principal": "^1.0.1",
    "@dfinity/auth-client": "^1.0.1",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}

